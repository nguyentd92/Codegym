<body>
    <script>
        var year = parseInt(prompt("Input year:"));
        var isLeapYear = false;
        
        if (year % 4 == 0){
            if (year % 100 != 0){
                isLeapYear = true;
            }
            else if (year % 400 == 0){
                isLeapYear = true;
            };
         };
         
        if (isLeapYear) {
            alert(year + " is Leap Year");
        }
        else {
            alert(year + " is not Leap Year");
        }


    </script>
</body>
